{
  "$schema": "https://json.schemastore.org/json",
  "version": 2,
  "profiles": {
    "core": [
      "filesystem_gui_repo",
      "time",
      "fetch"
    ],
    "gui_advanced": [
      "filesystem_gui_repo",
      "time",
      "fetch",
      "playwright_mcp",
      "github"
    ]
  },
  "servers": {
    "filesystem_gui_repo": {
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "E:\\E2Sworkspace\\202512\\RXMCU_MotorMaster"
      ],
      "enabled": true,
      "tier": "core"
    },
    "time": {
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-time"
      ],
      "enabled": true,
      "tier": "core",
      "note": "Enable when workflows need deterministic timezone conversions"
    },
    "fetch": {
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-fetch"
      ],
      "enabled": true,
      "tier": "core",
      "note": "Enable for source-backed doc lookups"
    },
    "memory": {
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "enabled": false,
      "tier": "extended",
      "note": "Enable for long-running multi-session context retention"
    },
    "playwright_mcp": {
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ],
      "enabled": false,
      "tier": "extended",
      "note": "Enable for UI automation, visual assertions, and navigation flows"
    },
    "github": {
      "transport": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "enabled": false,
      "tier": "extended",
      "note": "Requires GitHub token and MCP-capable client"
    },
    "git_local_uvx": {
      "transport": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-git",
        "--repository",
        "E:\\E2Sworkspace\\202512\\RXMCU_MotorMaster"
      ],
      "enabled": false,
      "tier": "optional",
      "note": "Install uv/uvx before enabling"
    }
  }
}
